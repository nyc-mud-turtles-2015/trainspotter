<%= flash[:errors] %>
<div class="form">
  <% if logged_in? %>
    <h2 class = "center-text">New Collection</h2>
    <%= form_for @collection do |f|%>
      <div class="row">
        <div class="3 columns">
          <%= f.text_field :title, placeholder: 'title' %>
        </div>
        <div class="3 columns"><%= f.text_area :description, placeholder: 'Description', rows: '5' %>
        </div>
      <div class = "center-text"><%= f.submit "Add", class: "radius success small button" %>
      </div>
    <% end %>
  <% else %>
    <h2><%= link_to 'Log in', login_path %> to create a new collection.</h2>
  <% end %>
</div>

