<div class= "content">

<% if @collection.owned_by?(current_user) %>
  <h2 class = "center-text">Permissions for <em><%= @collection.title %></em></h2>
  <h3 class = "center-text">Visibility:
    <% if @collection.private %>
      Private
      <p id="append_curator_search_results">Find a co-curator:
        <%= form_tag(search_curators_path, method: "get", enforce_utf8: false, id: "curators_search") do %>
          <%= text_field_tag(:c, "", placeholder: "Find a curator") %>
          <%= hidden_field_tag(:collection_id, @collection.id) %>
          <%= button_tag "search", name: nil, type: "submit" %>
        <% end %>
      </p>
      <%= form_for(@collection, url: "/collections/#{@collection.id}", method: 'put') do |f|%>
      <%= f.hidden_field :private, value: false %>
      <p class = "secure-text"><%= f.submit "make public", class: "radius small button"%></p>
    <% end %>
    <% else %>
      Public <%= form_for(@collection, url: "/collections/#{@collection.id}", method: 'put') do |f|%>
      <%= f.hidden_field :private, value: true %>
      <p class = "secure-text"><%= f.submit "make private", class: "radius small button"%></p>
    <% end %>
    <% end %>
  </h3>



<% else %>
  <h1>You need to <%= link_to 'log in', login_path %> to edit permissions.</h1>
<% end %>

   <div class= "center-text"><%= button_to "Go Back", collection_path(@collection), method: "get", class: "radius small button secondary"%>
      </div>

