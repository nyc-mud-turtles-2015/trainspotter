<div>
  <% if @collections.empty? %>
    <h2>No results found for '<%= "#{params[:c]}" %>'</h2>
  <% else %>
    <h2><%= "#{pluralize(@collections.size, 'result')} for '#{params[:c]}'" %></h2>
    <%= render partial: 'collections/search_results', collections: @collections, as: :collection %>
  <% end %>
</div>
