<% if logged_in? %>
  <% if @collection.owned_by?(current_user) %>
    <h5><%= link_to 'change collection permissions', collection_permissions_path(@collection) %></h5>
  <% end %>
  <%= social_share_button_tag("Check out what I spotted: #{@collection.title}") %>
  <% @collection.observations.each do |o|%>
    <li><%= link_to (image_tag o.image.url(:thumb)), collection_observation_path(@collection, o) %>by <%= o.curator.name %></li>
    <% if belongs_to_current_user?(o) || belongs_to_current_user?(@collection) %>
      <%= button_to "Delete", collection_observation_path(@collection, o), :method => :delete %>
    <% end %>
  <%end%>
<% else %>
  <% @collection.observations.each do |o|%>
    <li><%= link_to (image_tag o.image.url(:thumb)), collection_observation_path(@collection, o) %>by <%= o.curator.name %></li>
  <%end%>
<% end %>
<%= button_to "Add Observations", new_collection_observation_path(@collection), method: "get" %>



