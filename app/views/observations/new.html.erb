<%= flash[:errors] %>

<div class="form">
<% if logged_in? %>

<h2 class = "center-text">New Observation</h2>

<%= form_for @observation, url: collection_observations_path(@collection),  html: { multipart: true } do |f|%>
<div class="3 columns">
  <div><%= f.text_area :description, placeholder: 'Description', rows: '5' %></div>
<div class = "center-text"><button class= "file-upload" >Upload
  <%= f.file_field :image %>
</button></div>
  <%= f.hidden_field :collection_id, value: @collection.id%>
  <%= f.hidden_field :curator_id, value: current_user.id %>
<div class = "center-text"><%= f.submit "Pitch your observation!", class: "radius success large button" %></div>
  <%end%>

  <h2>New Observation</h2>
    <%= form_for @observation, url: collection_observations_path(@collection),  html: { multipart: true } do |f|%>
        <p><%= f.text_area :description, placeholder: 'Description', cols: '92', rows: '10' %></p>
        <p><%= f.file_field :image %></p>
        <%= f.hidden_field :collection_id, value: @collection.id%>
        <%= f.hidden_field :curator_id, value: current_user.id %>
        <% if current_user.can_create?(@collection) %>
          <%= f.hidden_field :pending, value: false %>
          <p><%= f.submit "Add" %></p>
        <% else %>
          <%= f.hidden_field :pending, value: true %>
          <p><%= f.submit "Request to Add" %></p>
        <% end %>
  <% end %>

<% else %>
  <h2><%= link_to 'Log in', login_path %> to add an observation.</h2>

<% end %>
</div>

