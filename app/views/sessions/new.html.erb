<script src="https://cdn.auth0.com/js/lock-7.9.min.js"></script>
<script type="text/javascript">

  var lock = new Auth0Lock(ENV['AUTH0_CLIENT'], 'trainspotter.auth0.com');

  function signin() {
    lock.show({
        callbackURL: 'http://localhost:3000/auth/auth0/callback'
      , responseType: 'code'
      , authParams: {
        scope: 'openid profile'
      }
    });
  }
</script>
<button onclick="window.signin();">Login</button>
